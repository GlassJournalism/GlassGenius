<?xml version="1.0" encoding="utf-8"?>

<ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="@color/grey_200">
    <item android:state_pressed="false" android:state_focused="false">              <!-- DEFAULT -->
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="2dp"/>
                    <solid android:color="@color/grey_300"/>
                </shape>
            </item>

            <item>
                <inset android:insetBottom="2dp">
                    <shape android:shape="rectangle">
                        <corners android:radius="2dp"/>
                        <solid android:color="@color/grey_50"/>
                    </shape>
                </inset>
            </item>
        </layer-list>
    </item>
</ripple>

