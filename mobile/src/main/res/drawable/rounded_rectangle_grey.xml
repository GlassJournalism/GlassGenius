<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false" android:state_focused="false">              <!-- DEFAULT -->
        <shape android:shape="rectangle">
            <corners android:radius="2dp"/>
            <solid android:color="@color/grey_700"/>
        </shape>
    </item>

    <item android:state_pressed="true" android:state_focused="false">               <!-- PRESSED -->
        <shape android:shape="rectangle">
            <corners android:radius="2dp"/>
            <solid android:color="@color/grey_300"/>
        </shape>
    </item>

    <item android:state_pressed="false" android:state_focused="true">               <!-- FOCUSED -->
        <shape android:shape="rectangle">
            <corners android:radius="2dp"/>
            <solid android:color="@color/grey_300"/>
        </shape>
    </item>

    <item android:state_pressed="true" android:state_focused="true">                <!--  F + P  -->
        <shape android:shape="rectangle">
            <corners android:radius="2dp"/>
            <solid android:color="@color/grey_300"/>
        </shape>
    </item>

</selector>